{
    "name": "goldoni/laravel-model-permissions",
    "description": "Model-scoped and global permission sync, base policies, role provisioning, and Super Admin override (Spatie-compatible).",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "permissions",
        "authorization",
        "policies",
        "policy",
        "gate",
        "roles",
        "spatie",
        "laravel-permission",
        "acl",
        "model-permissions",
        "global-permissions",
        "nova"
    ],
    "homepage": "https://github.com/fgoldoni/laravel-model-permissions",
    "support": {
        "issues": "https://github.com/fgoldoni/laravel-model-permissions/issues",
        "source": "https://github.com/fgoldoni/laravel-model-permissions"
    },
    "authors": [
        {
            "name": "Goldoni",
            "role": "Developer",
            "email": "fotsa.goldoni@yahoo.fr"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "suggest": {
        "spatie/laravel-permission": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Goldoni\\ModelPermissions\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Goldoni\\ModelPermissions\\ModelPermissionsServiceProvider"
            ]
        }
    },
    "prefer-stable": true
}
